<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Records - Hospital Management System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>

    <%- include('../partials/sidebar', {activePage: 'medical-records', user: user}) %>

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">My Medical Records</h1>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title">All Records</h2>
            </div>
            <div class="card-body">
                <% if (medicalRecords.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Doctor</th>
                                    <th>Diagnosis</th>
                                    <th>Treatment</th>
                                    <th>Prescription</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% medicalRecords.forEach(record => { %>
                                    <tr>
                                        <td><%= new Date(record.record_date).toLocaleDateString() %></td>
                                        <td><%= record.doctor_name %></td>
                                        <td><%= record.diagnosis || 'N/A' %></td>
                                        <td><%= record.treatment || 'N/A' %></td>
                                        <td><%= record.prescription || 'N/A' %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p>No medical records found.</p>
                <% } %>
            </div>
        </div>
    </main>

    <script src="/js/main.js"></script>
</body>
</html>