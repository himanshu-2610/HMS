<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Messages - Hospital Management System</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar', {activePage: 'messages', user: user}) %>
  
  <main class="main-content">
    <div class="page-header">
      <h1 class="page-title">Messages</h1>
    </div>

    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <%- include('../partials/messages', {messages, user, patients, doctors, activeFolder}) %>
  
    <!-- Admin-specific new message form -->
    <div class="card mt-4">
      <div class="card-header bg-primary text-white">
        <h2 class="card-title mb-0">New Message</h2>
      </div>
      <div class="card-body">
        <form action="/admin/messages/send" method="POST">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="receiver_type">Send To</label>
                <select id="receiver_type" name="receiver_type" class="form-control" required>
                  <option value="">Select recipient type</option>
                  <option value="patient">Patient</option>
                  <option value="doctor">Doctor</option>
                </select>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="form-group" id="patientSelect" style="display: none;">
                <label for="receiver_id">Select Patient</label>
                <select id="receiver_id" name="receiver_id" class="form-control">
                  <% patients.forEach(patient => { %>
                    <option value="<%= patient._id %>"><%= patient.full_name %></option>
                  <% }) %>
                </select>
              </div>

              <div class="form-group" id="doctorSelect" style="display: none;">
                <label for="receiver_id">Select Doctor</label>
                <select id="receiver_id" name="receiver_id" class="form-control">
                  <% doctors.forEach(doctor => { %>
                    <option value="<%= doctor._id %>"><%= doctor.full_name %></option>
                  <% }) %>
                </select>
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" class="form-control" required>
          </div>
          
          <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" class="form-control" rows="5" required></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
    </div>
  </main>
  
  <script>
    // Show/hide patient/doctor select based on receiver type
    document.getElementById('receiver_type').addEventListener('change', function() {
      const patientSelect = document.getElementById('patientSelect');
      const doctorSelect = document.getElementById('doctorSelect');
      
      if (this.value === 'patient') {
        patientSelect.style.display = 'block';
        doctorSelect.style.display = 'none';
        patientSelect.querySelector('select').required = true;
        doctorSelect.querySelector('select').required = false;
      } else if (this.value === 'doctor') {
        patientSelect.style.display = 'none';
        doctorSelect.style.display = 'block';
        patientSelect.querySelector('select').required = false;
        doctorSelect.querySelector('select').required = true;
      } else {
        patientSelect.style.display = 'none';
        doctorSelect.style.display = 'none';
        patientSelect.querySelector('select').required = false;
        doctorSelect.querySelector('select').required = false;
      }
    });

    // Initialize based on current value
    document.addEventListener('DOMContentLoaded', function() {
      const receiverType = document.getElementById('receiver_type');
      if (receiverType) {
        receiverType.dispatchEvent(new Event('change'));
      }
    });
  </script>
</body>
</html>