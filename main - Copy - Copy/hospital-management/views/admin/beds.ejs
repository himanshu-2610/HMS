<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bed Management - Hospital Management System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>

    <%- include('../partials/sidebar', {activePage: 'beds', user: user}) %>

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Bed Management</h1>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Add New Bed</h2>
            </div>
            <div class="card-body">
                <form action="/admin/beds" method="POST">
                    <div class="form-group">
                        <label for="bed_number">Bed Number</label>
                        <input type="text" id="bed_number" name="bed_number" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="ward">Ward</label>
                        <input type="text" id="ward" name="ward" class="form-control" required>
                    </div>
                    <button type="submit" class="btn">Add Bed</button>
                </form>
            </div>
        </div>

        <div class="card mt-20">
            <div class="card-header">
                <h2 class="card-title">All Beds</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Bed Number</th>
                                <th>Ward</th>
                                <th>Status</th>
                                <th>Patient</th>
                                <th>Admission Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% beds.forEach(bed => { %>
                                <tr>
                                    <td><%= bed.bed_number %></td>
                                    <td><%= bed.ward %></td>
                                    <td>
                                        <span class="badge <%= bed.status === 'Available' ? 'badge-success' : bed.status === 'Occupied' ? 'badge-primary' : 'badge-warning' %>">
                                            <%= bed.status %>
                                        </span>
                                    </td>
                                    <td><%= bed.patient_name || 'N/A' %></td>
                                    <td><%= bed.admission_date ? new Date(bed.admission_date).toLocaleDateString() : 'N/A' %></td>
                                    <td>
                                        <% if (bed.status === 'Available') { %>
                                            <form action="/admin/bed/assign/<%= bed.bed_id %>" method="POST" style="display: inline;">
                                                <div class="form-group">
                                                    <label for="patient_id_<%= bed.bed_id %>">Patient ID</label>
                                                    <input type="number" id="patient_id_<%= bed.bed_id %>" name="patient_id" class="form-control" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="admission_date_<%= bed.bed_id %>">Admission Date</label>
                                                    <input type="date" id="admission_date_<%= bed.bed_id %>" name="admission_date" class="form-control" required>
                                                </div>
                                                <button type="submit" class="btn btn-sm">Assign</button>
                                            </form>
                                        <% } else if (bed.status === 'Occupied') { %>
                                            <form action="/admin/bed/discharge/<%= bed.bed_id %>" method="POST" style="display: inline;">
                                                <div class="form-group">
                                                    <label for="discharge_date_<%= bed.bed_id %>">Discharge Date</label>
                                                    <input type="date" id="discharge_date_<%= bed.bed_id %>" name="discharge_date" class="form-control" required>
                                                </div>
                                                <button type="submit" class="btn btn-sm btn-danger">Discharge</button>
                                            </form>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/main.js"></script>
</body>
</html>