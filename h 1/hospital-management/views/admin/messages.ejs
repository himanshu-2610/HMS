<!-- views/admin/messages.ejs -->
<%- include('../partials/header') %>
<%- include('../partials/sidebar', {activePage: 'messages', user: user}) %>

<style>
  /* ===== MESSAGING SYSTEM STYLES ===== */
  .message-container {
    margin-bottom: 2rem;
  }

  .message-table {
    width: 100%;
    border-collapse: collapse;
  }

  .message-table th {
    background-color: var(--light-color);
    padding: 1rem;
    text-align: left;
    font-weight: 600;
  }

  .message-table td {
    padding: 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .message-table tr.unread {
    background-color: rgba(67, 97, 238, 0.05);
    font-weight: 500;
  }

  .message-table tr:hover {
    background-color: rgba(67, 97, 238, 0.03);
  }

  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.4);
  }

  .modal-content {
    background-color: var(--white-color);
    margin: 5% auto;
    padding: 2rem;
    border-radius: var(--border-radius);
    width: 80%;
    max-width: 800px;
    box-shadow: var(--shadow);
  }

  .close {
    color: var(--gray-color);
    float: right;
    font-size: 1.5rem;
    font-weight: bold;
    cursor: pointer;
  }

  .close:hover {
    color: var(--dark-color);
  }

  .modal-body {
    margin: 1.5rem 0;
    padding: 1rem 0;
    border-top: 1px solid rgba(0,0,0,0.1);
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .modal-content {
      width: 95%;
      margin: 10% auto;
      padding: 1.5rem;
    }
    
    .message-table th, 
    .message-table td {
      padding: 0.75rem;
    }
  }
</style>

<main class="main-content">
  <div class="page-header">
    <h1 class="page-title">
      <i class="fas fa-envelope"></i> Messages
    </h1>
  </div>

  <%- include('../partials/messages', {messages, user}) %>

  <!-- Admin-specific new message form -->
  <div class="card mt-4">
    <div class="card-header bg-primary text-white">
      <h2 class="card-title mb-0">
        <i class="fas fa-paper-plane"></i> New Message
      </h2>
    </div>
    <div class="card-body">
      <form action="/admin/messages/send" method="POST">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="receiver_type">
                <i class="fas fa-users"></i> Send To
              </label>
              <select id="receiver_type" name="receiver_type" class="form-control" required>
                <option value="patient">Patient</option>
                <option value="doctor">Doctor</option>
              </select>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-group" id="patientSelect">
              <label for="patient_receiver_id">
                <i class="fas fa-procedures"></i> Select Patient
              </label>
              <select id="patient_receiver_id" name="receiver_id" class="form-control">
                <% patients.forEach(patient => { %>
                  <option value="<%= patient.patient_id %>"><%= patient.full_name %></option>
                <% }) %>
              </select>
            </div>

            <div class="form-group" id="doctorSelect" style="display: none;">
              <label for="doctor_receiver_id">
                <i class="fas fa-user-md"></i> Select Doctor
              </label>
              <select id="doctor_receiver_id" name="receiver_id" class="form-control">
                <% doctors.forEach(doctor => { %>
                  <option value="<%= doctor.doctor_id %>"><%= doctor.full_name %></option>
                <% }) %>
              </select>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <label for="subject">
            <i class="fas fa-tag"></i> Subject
          </label>
          <input type="text" id="subject" name="subject" class="form-control" required>
        </div>
        
        <div class="form-group">
          <label for="message">
            <i class="fas fa-comment-alt"></i> Message
          </label>
          <textarea id="message" name="message" class="form-control" rows="5" required></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-paper-plane"></i> Send Message
        </button>
      </form>
    </div>
  </div>
</main>

<script>
  // Show/hide patient/doctor select based on receiver type
  document.getElementById('receiver_type').addEventListener('change', function() {
    const patientSelect = document.getElementById('patientSelect');
    const doctorSelect = document.getElementById('doctorSelect');
    
    if (this.value === 'patient') {
      patientSelect.style.display = 'block';
      doctorSelect.style.display = 'none';
      document.getElementById('patient_receiver_id').required = true;
      document.getElementById('doctor_receiver_id').required = false;
    } else {
      patientSelect.style.display = 'none';
      doctorSelect.style.display = 'block';
      document.getElementById('patient_receiver_id').required = false;
      document.getElementById('doctor_receiver_id').required = true;
    }
  });

  // Mark message as read when viewing
  async function showMessage(messageId) {
    try {
      // Mark as read first
      await fetch(`/admin/messages/${messageId}/read`, { method: 'POST' });
      
      // Then fetch message details
      const response = await fetch(`/admin/messages/${messageId}`);
      if (!response.ok) throw new Error('Failed to fetch message');
      
      const message = await response.json();
      
      // Update modal
      document.getElementById('modalSubject').textContent = message.subject;
      document.getElementById('modalSender').textContent = message.sender_name;
      document.getElementById('modalDate').textContent = new Date(message.created_at).toLocaleString();
      document.getElementById('modalMessage').textContent = message.message;
      
      // Update the UI to show message as read
      const messageRow = document.querySelector(`tr[data-message-id="${messageId}"]`);
      if (messageRow) {
        messageRow.classList.remove('unread');
        messageRow.querySelector('.badge').className = 'badge badge-success';
        messageRow.querySelector('.badge').textContent = 'Read';
      }
      
      document.getElementById('messageModal').style.display = 'block';
    } catch (error) {
      console.error('Error:', error);
      alert('Failed to load message');
    }
  }

  function closeModal() {
    document.getElementById('messageModal').style.display = 'none';
  }
</script>