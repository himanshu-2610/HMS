<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messages - Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/sidebar', {activePage: 'messages', user: user}) %>
    
    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Messages</h1>
        </div>
    
        <%- include('../partials/messages', {messages, user}) %>
    
        <!-- Admin-specific new message form -->
        <div class="card mt-4">
            <div class="card-header bg-primary text-white">
                <h2 class="card-title mb-0">New Message</h2>
            </div>
            <div class="card-body">
                <form action="/admin/messages/send" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="receiver_type">Send To</label>
                                <select id="receiver_type" name="receiver_type" class="form-control" required>
                                    <option value="">Select recipient type</option>
                                    <option value="patient">Patient</option>
                                    <option value="doctor">Doctor</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <!-- Single receiver_id field that will be updated by JavaScript -->
                            <input type="hidden" id="receiver_id" name="receiver_id" required>
                            
                            <div class="form-group" id="patientSelect" style="display: none;">
                                <label for="patient_id">Select Patient</label>
                                <select id="patient_id" class="form-control">
                                    <% patients.forEach(patient => { %>
                                        <option value="<%= patient.patient_id %>"><%= patient.full_name %></option>
                                    <% }) %>
                                </select>
                            </div>
                
                            <div class="form-group" id="doctorSelect" style="display: none;">
                                <label for="doctor_id">Select Doctor</label>
                                <select id="doctor_id" class="form-control">
                                    <% doctors.forEach(doctor => { %>
                                        <option value="<%= doctor.doctor_id %>"><%= doctor.full_name %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" id="subject" name="subject" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" name="message" class="form-control" rows="5" required></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const receiverType = document.getElementById('receiver_type');
            if (receiverType) {
                receiverType.dispatchEvent(new Event('change'));
            }
        });
    
        document.getElementById('receiver_type').addEventListener('change', function() {
            const patientSelect = document.getElementById('patientSelect');
            const doctorSelect = document.getElementById('doctorSelect');
            const receiverIdField = document.getElementById('receiver_id');
            
            if (this.value === 'patient') {
                patientSelect.style.display = 'block';
                doctorSelect.style.display = 'none';
                // Set the receiver_id from patient dropdown
                receiverIdField.value = document.getElementById('patient_id').value;
            } else if (this.value === 'doctor') {
                patientSelect.style.display = 'none';
                doctorSelect.style.display = 'block';
                // Set the receiver_id from doctor dropdown
                receiverIdField.value = document.getElementById('doctor_id').value;
            } else {
                patientSelect.style.display = 'none';
                doctorSelect.style.display = 'none';
                receiverIdField.value = '';
            }
        });
    
        // Update receiver_id when dropdowns change
        document.getElementById('patient_id').addEventListener('change', function() {
            if (document.getElementById('receiver_type').value === 'patient') {
                document.getElementById('receiver_id').value = this.value;
            }
        });
    
        document.getElementById('doctor_id').addEventListener('change', function() {
            if (document.getElementById('receiver_type').value === 'doctor') {
                document.getElementById('receiver_id').value = this.value;
            }
        });
    </script>
</body>
</html>