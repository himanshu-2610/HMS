<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctors - Hospital Management System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>

    <%- include('../partials/sidebar', {activePage: 'doctors', user: user}) %>

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Doctors</h1>
            <a href="/register/doctor" class="btn">Add New Doctor</a>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title">All Doctors</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Specialization</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% doctors.forEach(doctor => { %>
                                <tr>
                                    <td><%= doctor.doctor_id %></td>
                                    <td><%= doctor.full_name %></td>
                                    <td><%= doctor.specialization %></td>
                                    <td><%= doctor.email %></td>
                                    <td><%= doctor.phone || 'N/A' %></td>
                                    <td>
                                        <% if (doctor.is_active) { %>
                                            <span class="badge badge-success">Active</span>
                                        <% } else { %>
                                            <span class="badge badge-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/admin/doctor/<%= doctor.doctor_id %>" class="btn btn-sm">View</a>
                                        <form action="/admin/doctor/status/<%= doctor.doctor_id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="btn btn-sm <%= doctor.is_active ? 'btn-warning' : 'btn-success' %>">
                                                <%= doctor.is_active ? 'Deactivate' : 'Activate' %>
                                            </button>
                                        </form>
                                        <form action="/admin/doctor/delete/<%= doctor.doctor_id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/main.js"></script>
</body>
</html>