<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Dashboard - Hospital Management System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>

    <%- include('../partials/sidebar', {activePage: 'dashboard', user: user}) %>

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Patient Dashboard</h1>
        </div>

        <div class="stats-container">
            <div class="stat-card">
                <i class="fas fa-calendar-check"></i>
                <h3><%= counts.appointments %></h3>
                <p>Scheduled Appointments</p>
            </div>
            <div class="stat-card">
                <i class="fas fa-user-md"></i>
                <h3><%= counts.doctors %></h3>
                <p>Doctors Consulted</p>
            </div>
        </div>

        <% if (todaysAppointments.length > 0) { %>
            <div class="card mt-20">
                <div class="card-header">
                    <h2 class="card-title">Today's Appointments</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>Doctor</th>
                                    <th>Specialization</th>
                                    <th>Reason</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% todaysAppointments.forEach(appointment => { %>
                                    <tr>
                                        <td><%= appointment.appointment_time %></td>
                                        <td><%= appointment.doctor_name %></td>
                                        <td><%= appointment.specialization %></td>
                                        <td><%= appointment.reason || 'N/A' %></td>
                                        <td>
                                            <span class="badge badge-primary">Scheduled</span>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% } %>

        <% if (bed) { %>
            <div class="card mt-20">
                <div class="card-header">
                    <h2 class="card-title">Current Admission</h2>
                </div>
                <div class="card-body">
                    <p><strong>Bed Number:</strong> <%= bed.bed_number %></p>
                    <p><strong>Ward:</strong> <%= bed.ward %></p>
                    <p><strong>Admission Date:</strong> <%= new Date(bed.admission_date).toLocaleDateString() %></p>
                    <% if (bed.discharge_date) { %>
                        <p><strong>Discharge Date:</strong> <%= new Date(bed.discharge_date).toLocaleDateString() %></p>
                    <% } %>
                </div>
            </div>
        <% } %>
    </main>

    <script src="/js/main.js"></script>
</body>
</html>