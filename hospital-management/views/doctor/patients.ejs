<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Patients - Hospital Management System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>

    <%- include('../partials/sidebar', {activePage: 'patients', user: user}) %>

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">My Patients</h1>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Patient List</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Gender</th>
                                <th>Last Appointment</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% patients.forEach(patient => { %>
                                <tr>
                                    <td><%= patient.patient_id %></td>
                                    <td><%= patient.full_name %></td>
                                    <td><%= patient.email %></td>
                                    <td><%= patient.phone || 'N/A' %></td>
                                    <td><%= patient.gender %></td>
                                    <td>
                                        <% if (patient.last_appointment) { %>
                                            <%= new Date(patient.last_appointment).toLocaleDateString() %>
                                        <% } else { %>
                                            Never
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/doctor/patient/<%= patient.patient_id %>" class="btn btn-sm">View</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

     
</body>
</html>